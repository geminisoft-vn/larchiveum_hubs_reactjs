{
    "env": {
        "browser": true,
        "jest": true
    },
    "plugins": [
        "react",
        "prettier",
        "simple-import-sort"
    ],
    "settings": {
        "react": {
            "pragma": "React",
            "version": "18.0"
        },
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ],
                "moduleDirectory": [
                    "node_modules",
                    "./"
                ]
            }
        }
    },
    "extends": [
        "react-app",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020
    },
    "rules": {
        "no-console": "warn",
        "no-eval": "warn",
        "react/react-in-jsx-scope": "off",
        "import/named": "off",
        "no-unused-vars": "warn",
        "eqeqeq": "warn",
        "react-hooks/exhaustive-deps": "warn",
        "react/button-has-type": "off",
        "react/jsx-filename-extension": [
            2,
            {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        ],
        "simple-import-sort/imports": [
            "warn",
            {
                "groups": [
                    // Packages `react` related packages come first.
                    [
                        "^react",
                        "^@?\\w"
                    ],
                    // Internal packages.
                    [
                        "^(@|src)(/.*|$)"
                    ],
                    // Side effect imports.
                    [
                        "^\\u0000"
                    ],
                    // Parent imports. Put `..` last.
                    [
                        "^\\.\\.(?!/?$)",
                        "^\\.\\./?$"
                    ],
                    // Other relative imports. Put same-folder imports and `.` last.
                    [
                        "^\\./(?=.*/)(?!/?$)",
                        "^\\.(?!/?$)",
                        "^\\./?$"
                    ],
                    // Style imports.
                    [
                        "^.+\\.?(css)$"
                    ]
                ]
            }
        ],
        "import/extensions": [
            "warn",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "prettier/prettier": [
            "warn",
            {
                "printWidth": 80,
                "trailingComma": "es5",
                "semi": true,
                "no-mixed-spaces-and-tabs": [
                    "warn",
                    "smart-tabs"
                ],
                "no-unused-vars": [
                    "warn"
                ]
            }
        ]
    }
}